<%- include ('../partials/_header'); %>

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/updateMovie/<%= movie._id%>" method="POST">
                            <div class="form-group mb-2">
                                <input type="text" name="title" placeholder="Title" class="form-control" value="<%= movie.title %>">
                            </div>
                            <div class="form-group mb-2">
                                <input type="text" name="creationDate" placeholder="Creation Date" class="form-control" value="<%= movie.creationDate %>">
                            </div>
                            <div class="form-group mb-2">
                                <input type="text" name="qualification" placeholder="Qualification" class="form-control" value="<%= movie.qualification %>">
                            </div>
                            <div class="form-group mb-2">
                                <input type="text" name="associatedChar" placeholder="Character in the Movie" class="form-control" value="<%= movie.associatedChar %>">
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ('../partials/_footer'); %>